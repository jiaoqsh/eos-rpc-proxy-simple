{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "modules": true
    },
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2,
      { "SwitchCase" : 1 }
    ],
    "import/prefer-default-export": 1,
    "no-unused-vars": 1,
    "max-len": [
      "error",
      120
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-underscore-dangle": 0,
    "object-curly-newline": 0,
    "no-restricted-syntax": 0,
    "no-continue": 0,
    "no-await-in-loop": 0,
    "class-methods-use-this": 0,
    "no-console": [
      "error",
      { "allow": ["info", "warn", "error"] }
    ]
  }
}
